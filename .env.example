# =============================================
# AGRODATA CMS - Environment Variables Example
# =============================================
# Copy this file to .env and update the values

# --------------------------------------------
# Authentication
# --------------------------------------------
# Generate a secure secret with: openssl rand -base64 32
NUXT_AUTH_JS_SECRET=your-super-secret-key-here-min-32-chars

# Auth URL (for production, use your production URL)
NUXT_AUTH_URL=http://localhost:3000

# Mock user credentials (for development only)
NUXT_AUTH_JS_MOCK_USER_EMAIL=admin@agrodata.com
NUXT_AUTH_JS_MOCK_USER_PASSWORD=admin

# --------------------------------------------
# External API Configuration
# --------------------------------------------
# External API base URL (server-side only - NOT exposed to client)
# The Nuxt server will proxy all requests to this endpoint
NUXT_API_BASE_URL=http://localhost:8883

# --------------------------------------------
# Development
# --------------------------------------------
# Set to 'production' for production builds
NODE_ENV=development
